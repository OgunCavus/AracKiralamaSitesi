@model IEnumerable<AracKiralamaDB.Models.ArabaTurleri>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Araba Türleri</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create","ArabaTurleris")">Tür Ekle</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ArabaTurAdi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ArabaTurAdi)
        </td>
        <td>
            <a class="btn btn-success" href="@Url.Action("Edit","ArabaTurleris",new { id = item.ArabaTurID })">Güncelle</a>
            <a class="btn btn-warning" href="@Url.Action("Details","ArabaTurleris",new { id = item.ArabaTurID })">Detay Gör</a>
            <a class="btn btn-danger" href="@Url.Action("Delete","ArabaTurleris",new { id = item.ArabaTurID })">Sil</a>
        </td>
    </tr>
}

</table>
